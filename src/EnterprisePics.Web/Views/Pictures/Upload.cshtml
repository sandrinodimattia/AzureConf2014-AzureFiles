@model EnterprisePics.Web.Model.PictureUploadModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title">Upload Picture</h3>
        </div>
        <form role="form" method="post" action="@Url.Action("Upload", "Pictures")" enctype="multipart/form-data">
            <div class="modal-body">
                <fieldset>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DirectoryName, "Directory", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.DirectoryName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.File, new { @class = "control-label" })
                        <input type="file" name="File" />
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>
